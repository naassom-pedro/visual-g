Algoritmo "ATIVIDADE-02"

Var
   NOME: caractere
   IDADE: inteiro

Inicio
   Escreval("Qual o seu nome?")
   escreva("Resposta: ")
   leia(NOME)
   LimpaTela

   Escreval("E qual a sua idade?")
   escreva("Resposta: ")
   leia(IDADE)
   LimpaTela

   escreva("Bem vindo, ",NOME," você tem ",IDADE," anos!")

Fimalgoritmo